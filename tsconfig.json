{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "components": ["src/components"],
      "pages": ["src/pages"],
      "store": ["src/store"]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es7", "es2018.promise"],
    "module": "commonjs",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": ["./src/**/*"]
}
